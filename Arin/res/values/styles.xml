<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
	</style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- Layouts -->
    <style name="BaseView">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">match_parent</item> 
    </style>
    <style name="SplashView" parent="@style/BaseView">
        <item name="android:background">@color/main_bg_color</item>
    </style>
    <style name="RegularView" parent="@style/BaseView">
        <item name="android:background">@drawable/bg_regular</item>
    </style>
    <style name="RegularDialogView" parent="@style/BaseView">
        <item name="android:background">#282828</item>
    </style>
    
    <!-- Dialogs -->
    <style name="Container">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    
    <!-- LinearLayout -->
    <style name="distance_control">
        <item name="android:background">#2e2e2e</item>
    </style>
    <style name="paging_control">
        <item name="android:background">#2e2e2e</item>
    </style> 
    
    
    <!-- Texts -->
    <style name="main_menu">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:background">@drawable/menu_button_selector</item>
    </style>
    <style name="regular_white">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    <style name="node">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="species_count">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#2e2e2e</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    <style name="range">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="comment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#88FFFFFF</item>
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    <style name="ellipseCommentText" parent="@style/comment">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item> 
    </style>
    <style name="date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#88FFFFFF</item>
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    <style name="softpageNum">
        <item name="android:layout_width">wrap_content</item>  
        <item name="android:layout_height">wrap_content</item>  
    </style>
    <style name="pageNum">
        <item name="android:layout_width">0dp</item>  
        <item name="android:layout_height">wrap_content</item>  
		<item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="websitelink">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">fill_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:layout_marginBottom">10dp</item> 
        <item name="android:gravity">center_horizontal</item> 
        <item name="android:layout_alignParentBottom">true</item> 
    </style>
    
    
    <!-- Lines -->
    <style name="Line">
	    <item name="android:layout_width">fill_parent</item> 
        <item name="android:layout_height">1dp</item> 
	</style>
	<style name="MenuLine" parent="@style/Line">
	    <item name="android:layout_marginLeft">20dp</item> 
        <item name="android:layout_marginRight">20dp</item> 
        <item name="android:background">#88ffffff</item>
	</style>

	
	
    <!-- Buttons -->
    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    <style name="CircleButton" parent="@style/MyButton">
        <item name="android:layout_width">100sp</item>  
        <item name="android:layout_height">100sp</item>  
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/circle_button_selector</item> 
    </style>
    <style name="navButton">
        <item name="android:layout_width">0dp</item>  
        <item name="android:layout_height">wrap_content</item>  
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/arrow_button_selector</item> 
    </style>
</resources>
